#!/bin/bash



for D in *; do
    if [ -d "${D}" ]; then
      #echo "${D}"   # your processing here
      for filename in ./$D/*; do
        if [[ $filename == *"cover"* ]]; then
          magick $filename -strip -auto-orient -define png:compression-level=9 -interlace plane -quality 60 -resize 300 $filename	
	else
          magick $filename -strip -auto-orient -define png:compression-level=9 -interlace plane -quality 60 -resize 1200 $filename
        fi
      done
    fi
done
